  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": false,
    "moduleResolution": "node",
    "module": "commonjs",
    "target": "es5"
  },
  "exclude": [
    "webroot/bower_components",
    "node_modules",
    "webroot"
  ]
}
